<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/madrid">

    <TextView
        android:id="@+id/origen_destino"
        android:text="Destino - Origen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imagenLista"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:src="@drawable/madrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/origen_destino"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:background="@android:color/white"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imagenLista"
        app:layout_constraintEnd_toEndOf="@+id/imagenLista"
        app:layout_constraintStart_toStartOf="@+id/imagenLista">

        <Button
            android:id="@+id/textoPrecio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:gravity="center"
            android:text="VER DETALLE"
            android:background="@color/white"
            android:textColor="@color/black"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>